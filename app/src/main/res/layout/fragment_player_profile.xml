<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <!-- Première CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre 1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/dataCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Données 1"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Deuxième CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre 2"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/dataCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Données 2"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleCard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre 3"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/dataCard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Données 3"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleCard4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre 4"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/dataCard4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Données 4"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </GridLayout>
</ScrollView>
